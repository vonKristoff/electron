{
  "name": "electron-boilerplate",
  "productName": "build-name",
  "version": "0.0.0",
  "description": "REQUIRED",
  "license": "MIT",
  "devDependencies": {
    "devtron": "latest",
    "electron": "latest",
    "electron-packager": "latest",
    "electron-debug": "latest",
    "jade": "latest",
    "jshint": "^2.8.0",
    "jshint-stylish": "^0.4.0",
    "live-server": "^0.8.2",
    "nib": "latest",
    "npm-run-all": "^1.2.13",
    "onchange": "^3.0.0",
    "stylus": "latest",
    "watch": "latest"
  },
  "dependencies": {
    "rx-lite": "latest",
    "vue": "latest",
    "vue-rx": "^1.0.0"
  },
  "main": "electron.js",
  "scripts": {
    "start": "npm-run-all --parallel listen:* electron:boot",
    "build": "npm-run-all --parallel build:*",
    "electron:boot": "electron .",
    "server:localhost": "live-server ./ --port=3000",
    "listen:js": "onchange 'js/**/*.js' -- jshint --reporter=node_modules/jshint-stylish/stylish js/.; exit 0",
    "listen:views": "onchange 'jade/views/*.jade' -- npm run compile:pages",
    "listen:templates": "onchange jade/components/**/*.jade -- npm run compile:templates",
    "listen:stylus": "onchange 'stylus/**/*.styl' -- npm run compile:css",
    "compile:css": "stylus -u nib stylus/style.styl -o css/style.css",
    "compile:pages": "jade --obj '{dev:true}' jade/views -o ./",
    "compile:templates": "jade jade/components -o js/templates/",
    "build:css": "stylus -u nib stylus/style.styl -o css/style.css",
    "build:views": "onchange 'jade/views/*.jade' -- npm run compile:pages",
    "build:templates": "onchange jade/components/**/*.jade -- npm run compile:templates",
    "build:electron": "electron-packager . --out=app --all"
  }
}
